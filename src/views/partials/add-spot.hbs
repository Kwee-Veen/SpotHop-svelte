<section class="content box has-background-warning-light">
  <form action="/dashboard/addspot" method="POST">
    <label class="label has-text-centered is-large has-text-warning-dark">Add Spot</label>
    <div class="field is-grouped-horizontal">
      <div class="field-body">
        <div class="field is-narrow">
          <input class="input is-success" type="text" placeholder="Enter name" name="name" required/>
        </div>
        <div class="control">
          <div class="select">
            <select class="input is-link is-rounded" name="category">
              <option value="Uncategorised">Choose Category</option>
              <option value="Site">Site</option>
              <option value="Locale">Locale</option>
              <option value="Activity">Activity</option>
              <option value="Scenery">Scenery</option>
              <option value="Structure">Structure</option>
              <option value="Shopping">Shopping</option>
              <option value="Uncategorised">Uncategorised</option>
            </select>
          </div>
        </div>
        <div class="field is-narrow"></div>
        <div class="field is-narrow">
          <input class="input is-danger is-rounded" type="number" min="-90" max="90" step="0.00001" placeholder="Latitude" name="latitude" required/>
        </div>
        <div class="field is-narrow">
          <input class="input is-danger is-rounded" type="number" min="-180" max="180" step="0.00001" placeholder="Longitude" name="longitude" required/>
        </div>
      </div>
    </div>
    <div class="field">
      <input class="input is-success" type="text" placeholder="Enter description" name="description"/>
    </div>
    <div class="text has-text-centered">
      <button class="button is-warning is-rounded">Add Spot</button>
    </div>
  </form>
</section>