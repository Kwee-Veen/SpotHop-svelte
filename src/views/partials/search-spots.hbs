<section class="content box has-background-info-light">
  <form action="/dashboard/searchspot" method="POST">
    <label class="label has-text-centered is-large has-text-info-dark">Search Spots</label>
    <div class="field">
      <div class="field-body">
        <div class="field is-narrow">
          <input class="input is-success" type="text" placeholder="Enter name" name="name" />
        </div>
        <div class="control">
          <div class="select">
            <select class="input is-link is-rounded" name="category">
              <option value="">Choose Category</option>
              <option value="Site">Site</option>
              <option value="Locale">Locale</option>
              <option value="Activity">Activity</option>
              <option value="Scenery">Scenery</option>
              <option value="Structure">Structure</option>
              <option value="Shopping">Shopping</option>
              <option value="Uncategorised">Uncategorised</option>
            </select>
          </div>
        </div>
        <div class="field is-narrow"></div>
        <div class="field is-narrow">
          <input class="input is-danger is-rounded" type="number" min="-90" max="90" step="0.00001"
            placeholder="Latitude" name="latitude" />
        </div>
        <div class="field is-narrow">
          <input class="input is-danger is-rounded" type="number" min="-180" max="180" step="0.00001"
            placeholder="Longitude" name="longitude" />
        </div>
        <div class="control">
          <div class="select">
            <select class="input is-warning is-rounded" name="global">
              <option value="false">Only Search My Spots</option>
              <option value="true">Global Search</option>
            </select>
          </div>
        </div>
      </div>
    </div>
    <div class="text has-text-centered">
      <button class="button is-info is-rounded">Search Spots</button>
    </div>
  </form>
</section>
